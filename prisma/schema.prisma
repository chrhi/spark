generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum STATUS {
  ACTIVE
  UNACTIVE
}

model Product {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  title             String?
  description       Json?
  status            STATUS   @default(UNACTIVE)
  media             String[]
  price_u_buy_with  Float
  price_u_sell_with Float
  inventory          Int      @default(1)
  continue_selling  Boolean  @default(false)
  category          String[]
}
