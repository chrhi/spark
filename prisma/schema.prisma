// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum STATUS {
  ACTIVE
  UNACTIVE
}

model Product {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  name       String
  description String?
  status      STATUS  @default(ACTIVE)
  images      Json?
  price       String

  inventory Int @default(1)

  category String[]
}
model Order {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name       String
  description String?
  status      STATUS  @default(ACTIVE)
  images      Json?
  price       String
  inventory Int @default(1)
  category String[]
}
model Customer {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  name       String
  description String?
  status      STATUS  @default(ACTIVE)
  images      Json?
  price       String

  inventory Int @default(1)

  category String[]
}
